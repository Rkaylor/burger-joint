<h1>Burgers!</h1>

<h2>Burgers to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless hungry}}
      {{ burgers/burger-block hungry=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{ burgers/burger-block hungry=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="hungry">Hungry?</label><br>
    <input type="radio" name="hungry" value="1" checked> Hungry!<br>
    <input type="radio" name="hungry" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>